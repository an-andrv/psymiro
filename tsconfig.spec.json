/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
    ]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "paths": {
    "@styles/*": ["./assets/styles/"],
    "@environments/*": ["./environments/*"],
    "@app/*": ["./app/*"],
    "@shared/*": ["./app/shared/*"],
    "@mocks/*": ["./app/shared/mocks/*"],
  }
}
